<h1>Recipes#index Searching for - <%= @search_term %></h1>
<p>Find me in app/views/recipes/index.html.erb </p>

<table border= "1">
	<tr>
		<th>Image</th>
		<th>Name</th>
		<th>Description</th>
	</tr>
	<% @recipes.each do |recipe| %>
	<tr>
		<td><%= link_to image_tag(recipe["image_url"], height: '100', width: '100',class:'img-thumbnail'), recipe["source_url"]%></td>
		<!--<td><%= image_tag(recipe["image_url"], height: '100', width: '100')%></td>-->
		<td><%= link_to sanitize(recipe["title"]),recipe["source_url"] %></td>
		<td><%= recipe["social_rank"] %></td>
	</tr>
	<% end %>
</table>